<script type="text/javascript">
    $.ajaxSetup({
        headers: {
            'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
        }
    });

  $(document).ready(function () {
    $("#registerForm").on("submit", function (e) {
        e.preventDefault();
            var name = $("#firstname").val();
            var lastName = $("#lastname").val();
            var email = $("#email").val();
            var password = $("#password").val();
            var c_password = $("#c_password").val();
            var promotion_message = $("#promotion_message").val();
            var website_url = $("#website_url").val();
            var errorStatus = false;

            $('.ee').hide();
            $('#registerSubmit').prop('disabled',true);


            if (name == "") {
                $(".error-firstname").show();
                errorStatus = true;
            }
            if (lastName == "") {
                $(".error-lastname").show();
                errorStatus = true;
            }
            if(email == ""){
                $(".error-email").show();
                errorStatus = true;
            }
            if(password == ""){
                $(".error-password").show();
                errorStatus = true;
            }
            if(c_password == ""){
                $(".error-c_password").show();
                errorStatus = true;
            }
            if(password !== c_password){
                $(".error-c_password_not_match").show();
                errorStatus = true;
            }
            if (promotion_message == "") {
                $(".error-promotion_message").show();
                errorStatus = true;
            }
            if (website_url == "") {
                $(".error-website_url").show();
                errorStatus = true;
            }
            if(errorStatus){
                errorStatus = true;
            }

            $.ajax({
                type: "POST",
                url: "{{ route('affiliate.form') }}",
                data: {
                    firstname: name,
                    lastname: lastName,
                    email: email,
                    password: password,
                    promotion_message: promotion_message,
                    website_url: website_url,
                },
                complete : function (data) {
                    $('#registerSubmit').prop('disabled',false);
                },
                success: function (data) {
                    if (!data.success) {
                        var err = data.errors;
                        for (var key in err) {
                            if (err.hasOwnProperty(key)) {
                                if (err[key] != "") {
                                    $("#basicplan .error-" + key).text(err[key]).show();
                                };
                            }
                        }
                    }

                    if (data.success) {
                        $(".success").text(data.message);
                        setTimeout(function () {
                            window.location.reload(true);
                        }, 5000);
                    }
                }
            });

        });
    });
</script>
@endsection
